
@model DemoCCM.Models.User
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}
@Styles.Render("~/Content/style.css")

<div id="login">
    <h1>Đăng Kí</h1>
    @using (Html.BeginForm("Register","Account",new { ReturnUrl = ViewBag.ReturnUrl},FormMethod.Post))
            {
                 @Html.AntiForgeryToken()
                 @Html.ValidationSummary(true)
                 <div id="inputs">
                   
                    @Html.TextBoxFor(m=>m.UserName,new {placeholder="Username or Email"})
                    @Html.ValidationMessageFor(m => m.UserName)
                
                   
                    @Html.PasswordFor(m => m.Pass, new {placeholder="Password"})
                    @Html.ValidationMessageFor(m => m.Pass)
                 </div>
                <div id="actions">
                    <div class="submit">
                        <input type="submit" name="commit" value="Đăng Kí">
                    </div>
                     <div class="login-help">
                        <p>Quên mật khẩu? <a href="index.html">Bấm vào đây</a></p>
                    </div>
                   
                </div>
            }
    
</div>


 


@model DemoCCM.Models.Map
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DrawLayout.cshtml";
    String levelID3 = ViewBag.levelID2 as String;
    String topicID3 = ViewBag.topicID2 as String;
    
}

<div id="container">
	<header>
  	<div id="topbar">
    		<div id="toolbar">
                <img src="photos/logocc2.png" alt="Concept Map">
 
                      @{Html.RenderAction("_dropdownListPartial", "Topic",
                    new { LevelID = levelID3, topicId1 = topicID3 });}
               

            </div>
   		</div>
	</header>


<div id="canvas-container">
 <div id="leftbar"> 
    <script src="scripts/jquery-1.10.2.min.js"></script>
    <script src="scripts/jquery-ui.js"></script> 
    <div id="leftbox">
     <h3>Khái Niệm</h3>
                  @foreach (var item in Model.Concepts)
                  {

                         <div class="boxc">@item.ConceptName @item.ConceptID</div>
                 
                  }

   
    </div>
    @{Html.RenderAction("_LinkOfTopicPartial", "Topic", new { links = Model.Links });}
     </div>
     <div id="mapd">   </div>
</div>
     <script>
         $(function () {

             $('.boxc').draggable({
                 cursor: 'move',
                 revert: true
             });

             $('#mapd').droppable({
                 accept: '.boxc',
                 drop: handleDropEvent
             });

             function handleDropEvent(event, ui) {
                 draggable.appendTo('.boxc')
                
             }
         });
    </script>

    <footer>
    	<div id="bottombar"></div>
    </footer>
</div>
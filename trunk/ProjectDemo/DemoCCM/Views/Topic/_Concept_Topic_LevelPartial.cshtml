@model List<DemoCCM.Models.ConceptsForTopic>

@Scripts.Render("~/Scripts/js_style.js")

<div>
              <ul>
                  @foreach (var item in Model)
                  {
                      <li>@item.ConceptAll.ConceptName @item.ConceptAll.ConceptID</li>
                  }
                  @{
                      var l = new SelectList(Model,"Question","Question");
                      @Html.DropDownList("Question",(IEnumerable<SelectListItem>)l)
                  }
               </ul>
    </div>
@{Html.RenderAction("_LinkOfTopicPartial", "Topic", new {concept = Model});}

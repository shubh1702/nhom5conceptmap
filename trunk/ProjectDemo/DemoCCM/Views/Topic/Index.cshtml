@model DemoCCM.Models.Map
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DrawLayout.cshtml";
    String levelID3 = ViewBag.levelID2 as String;
    String topicID3 = ViewBag.topicID2 as String;
    
}

<div id="container">
	<header>
  	<div id="topbar">
    		<div id="toolbar">
                <img src="photos/logocc2.png" alt="Concept Map">
                    <div id="centerbartop">
                        <h4>Câu Hỏi Trọng Tâm</h4>
                        @{Html.RenderAction("_dropdownListPartial", "Topic", new { LevelID = levelID3, topicId1 = topicID3 });}
                    </div>

            </div>
   		</div>
	</header>


<div id="canvas-container">
 <div id="leftbar"> 
    <script src="scripts/jquery-1.10.2.min.js"></script>
    <script src="scripts/jquery-ui.js"></script> 
    <div id="leftbox">
     <h3>Khái Niệm</h3>
                  @foreach (var item in Model.Concepts)
                  {

                         <div class="boxc">@item.ConceptName @item.ConceptID</div>
                 
                  }

   
    </div>
    @{Html.RenderAction("_LinkOfTopicPartial", "Topic", new { links = Model.Links });}
     </div>
     <div id="mapd">   </div>
</div>
     <script>
         $(function () {

             $('.boxc').draggable({
                 cursor: 'move',
                 revert: true 
             });

             $('#mapd').droppable({
                 accept: '.boxc',
                 drop: handleDropEvent
             });

             function handleDropEvent(event, ui) {
                 draggable.appendTo('.boxc')
             }
         });
    </script>

    <footer>
    	<div id="bottombar"> 
            <div id="centerbarbot">
            <button type="button">Save</button>
            <button type="button">Kết Quả</button>
            <button type="button">Đánh Giá</button>
            <button type="button">Làm Lại</button>   
            </div>
    	</div>
    <//footer>
</div>